/* pages/home/home.wxss */
.container {
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  width: 100%;
}

/* 搜索栏样式 */
.search-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fdcf9d;
  width: 100%;
  box-sizing: border-box;
}

.search-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  padding: 10rpx;
}

.search-icon, .location-icon {
  width: 40rpx;
  height: 40rpx;
}

.location-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border-radius: 50%;
}

/* AI指南样式 */
.ai-guide {
  width: 100vw;
  display: flex;
  justify-content: center;
  align-items: center;
}

.swiper-container {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
}

.swiper-ban {
  width: 90%;
  height: 100%;
}

.swiper-ban image {
  width: 100%;
  height: 100%;
}

.arrow {
  width: 5%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.arrow image {
  width: 30px;
  height: 30px;
}

/* 轮播图样式 */
.swiper-ban {
  width: 100%;
  height: 350rpx;
}

.swiper-ban image {
  width: 100%;
  border-radius: 0;
}

/* 导航栏样式 */
.navbar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 20rpx 0;
  background-color: #fff;
  box-shadow: 0 4rpx 15rpx 2rpx rgba(255, 140, 0, 0.3);
  width: 100%;
}


.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.nav-item image {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.nav-item text {
  font-size: 24rpx;
  color: #333;
}

.nav-item:active {
  opacity: 0.7;
}

/* 地图容器样式 */
.map-container {
  width: 100%;
  height: 600rpx;
  margin-top: 20rpx;
}

/* 提示样式 */
.tips {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #F0F0F0;
  border-radius: 10rpx;
  width: 100%;
  box-sizing: border-box;
}

