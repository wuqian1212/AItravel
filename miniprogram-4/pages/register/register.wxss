/* pages/register/register.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f5f5f5;
}

.register-box {
  width: 80%;
  padding: 40rpx;
  background-color: #ffffff;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
}

.register-form {
  margin-bottom: 30rpx;
}

.input-group {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #e0e0e0;
  margin-bottom: 30rpx;
  padding-bottom: 10rpx;
}

.icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
}

.register-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #f88753;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 45rpx;
  margin-top: 50rpx;
  box-shadow: 0 4rpx 10rpx rgba(26, 173, 25, 0.2);
}

.login-link {
  text-align: center;
  font-size: 26rpx;
  color: #f58d51;
  margin-top: 30rpx;
}
