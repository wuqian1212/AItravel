/* pages/user/user.wxss */
.container {
  padding: 20rpx;
}
#login-btn {
  width: 100px;
  padding: 10rpx;
  font-size: 40rpx;
  color: rgb(255,101,0);
  border: none;
}

.user-info {
  display: flex;
  align-items: center;
  width: 80%;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
}

.user-details {
  width: 70%;
  display: flex;
  flex-direction: column;
}


.username {
  font-size: 36rpx;
  font-weight: bold;
}

.user-id {
  font-size: 24rpx;
  color: #888;
  margin-top: 10rpx;
}

.options {
  margin-top: 100rpx;
  width: 80%;
}

.option-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
}

.option-text {
  font-size: 30rpx;
}

.arrow {
  color: #888;
}
.logout-confirm {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.logout-confirm-content {
  background-color: white;
  padding: 30rpx;
  border-radius: 10rpx;
  text-align: center;
}

.logout-confirm-buttons {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

.logout-confirm-buttons button {
  width: 70%;
}